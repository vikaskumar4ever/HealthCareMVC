@model SI.Meditourism.Master.Model.ContactUs

@{
    ViewData["Title"] = "ContactUs";
    Layout = "~/Views/Shared/_FrontEndLayout.cshtml";
}

<section class="ptb-70" style="margin-top:143px">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="heading-part mb-30">
                    <h3 class="main_title  heading"><span>Leave a message!</span></h3>
                    <hr />
                </div>
            </div>
        </div>
        <div class="main-form">

            <div class="row">
                <div class="col-md-4" style="margin-top:15px">
                    <form asp-action="SubmitContactUs" asp-controller="ContactUs" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label><span style="color:red">*</span>
                            <input asp-for="Name" class="form-control" style="color:black" required />
                        </div>
                        <div class="form-group">
                            <label asp-for="MobileNo" class="control-label"></label><span style="color:red">*</span>
                            <input asp-for="MobileNo" id="txtctactmobileno" class="form-control" style="color:black" placeholder="Enter MobileNo"
                                   pattern="[0-9 -()+]+$" onchange="ValidateMobileNo()" maxlength="14" name="MobileNo" required />
                        </div>
                        <div class="form-group">
                            <label asp-for="AltMobile" class="control-label"></label>
                            <input asp-for="AltMobile" class="form-control" style="color:black" />
                        </div>
                        <div class="form-group">
                            <label asp-for="EmailId" class="control-label"></label><span style="color:red">*</span>
                            <input asp-for="EmailId" type="email" class="form-control" style="color:black" required />
                            <span asp-validation-for="EmailId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Country" class="control-label"></label><span style="color:red">*</span>
                            <input asp-for="Country" class="form-control" style="color:black" required />
                        </div>
                        <div class="form-group">
                            <label asp-for="Message" class="control-label"></label>
                            <textarea asp-for="Message" style="color:black" class="form-control"></textarea>
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Submit" class="btn btn-default" />
                        </div>
                    </form>
                    @if (@ViewBag.Message != null)
                    {
                        <label><span style="color: green"> @ViewBag.Message</span></label>
                    }

                </div>
            </div>

           
        </div>
    </div>
</section>

<script type="text/javascript">
    $('#txtctactmobileno').on('input', function (e) {
            this.setCustomValidity('')
            if ($(this).val() > 99999999999999) {
                this.setCustomValidity('ex:- +9188982323');
            }
            this.reportValidity();
        })
</script>