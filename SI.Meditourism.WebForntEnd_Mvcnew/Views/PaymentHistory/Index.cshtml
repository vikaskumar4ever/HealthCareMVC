@model IEnumerable<SI.Meditourism.PaymentServices.Model.TreatmentPagelst>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_UserDashboardLayoutPage.cshtml";
}
<aside class="right-side">
    <section class="content-header">
        <h1>
           Payment History

        </h1>
        <ol class="breadcrumb">
            <li class="active">
                <a href="@Url.Action("Index", null, new { area = string.Empty, controller= "UserDashboard" })"><i class="fa fa-dashboard"></i>&nbsp;&nbsp;Dashboard</a>
            </li>
        </ol>
    </section>
    <div class="row">
        <section class="content" style="margin-left:22px">

            <div class="row">
                <div class="col-md-12">
                  
                    <p>
                      
                    </p>
                    <table class="table">
                        <tr>

                            <th>
                                @Html.DisplayNameFor(model => model.PAYId)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.ServiceName)
                            </th>
                            
                            <th>
                                @Html.DisplayNameFor(model => model.Description)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Currency)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.Amount)
                            </th>
                            <th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    @Html.DisplayFor(modelItem => item.PAYId)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.ServiceName)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Currency)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Amount)
                                </td>

                                <td> |
                                    @Html.ActionLink("Details", "Details", new { id = item.PaymentId }) |
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>

        </section>
    </div>
</aside>