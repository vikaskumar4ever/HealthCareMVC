@model SI.Meditourism.WebForntEnd_Mvcnew.Models.ContactUs.ContactUs

@{
    ViewData["Title"] = "ContactUs";
    Layout = "~/Views/Shared/_FrontEndLayout.cshtml";
}

<style type="text/css">
    @@media(min-width: 758px) and (max-width:2700px) {
        .label1 {
            margin-left: 35px;
        }

        #section-contactus {
            background-color: #c2d9f1;
        }
    }
</style>

<section id="section-contactus" class="ptb-70" style="margin-top:48px;">
    <div class="container">
        <div class="row row1">
            <div class="col-12">
                <div class="heading-part">
                    <h3 class="main_title  heading">Leave a message!</h3>
                    <hr />
                </div>
            </div>
        </div>
        <div class="main-form">

            <div class="row">
             
                <div class="col-md-4" style="margin-top:15px">
                    @using (Html.BeginForm("SubmitContactUs", "ContactUs", FormMethod.Post))
                    { @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Name" class="control-label">FullName</label><span style="color:red">*</span>
                            <input asp-for="Name" placeholder="Enter FullName" name="Name" class="form-control" style="color:black" required />
                        </div>
                        <div class="form-group">
                            <label asp-for="MobileNo" class="control-label">MobileNo</label><span style="color:red">*</span>
                            <input asp-for="MobileNo" id="txtctactmobileno" class="form-control" style="color:black" placeholder="Enter MobileNo"
                                   pattern="[0-9 -()+]+$" maxlength="14" min="9" name="MobileNo" required />
                        </div>
                        <div class="form-group">
                            <label asp-for="AltMobile" class="control-label">AltMobile</label>
                            <input asp-for="AltMobile" placeholder="Enter AltMobile" name="AltMobile" maxlength="14" min="9" class="form-control" style="color:black" />
                        </div>
                        <div class="form-group">
                            <label asp-for="EmailId" class="control-label">EmailId</label><span style="color:red">*</span>
                            <input asp-for="EmailId" type="email" placeholder="Enter EmailId" name="EmailId" class="form-control" style="color:black" required />
                            <span asp-validation-for="EmailId"  class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Country" class="control-label">Country</label><span style="color:red">*</span>
                            <input asp-for="Country" placeholder="Enter Country" name="Country" class="form-control" style="color:black" required />
                        </div>
                        <div class="form-group">
                            <label asp-for="Message" class="control-label">Message</label>
                            <textarea asp-for="Message" name="Message" placeholder="Enter Message" style="color:black" class="form-control"></textarea>
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Submit" style="background:#30c7ba" class="btn btn-default" />
                        </div>
                    }
                   
                    @if (@ViewBag.Message != null)
                    {
                        <label><span style="color: green"> @ViewBag.Message</span></label>
                    }

                </div>
            </div>

           

        </div>
    </div>
</section>
<script type="text/javascript">
    $('#txtctactmobileno').on('input', function (e) {
        this.setCustomValidity('')
        if ($(this).val() > 99999999999999) {
            this.setCustomValidity('ex:- +9188982323');
        }
        this.reportValidity();
    });
</script>