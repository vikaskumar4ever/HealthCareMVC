@model SI.Meditourism.WebForntEnd_Mvcnew.Models.FAQ.FAQlistFrntEnd
@{
    ViewData["Title"] = "FAQ";
    Layout = "~/Views/Shared/_FrontEndLayout.cshtml";

}
<link type="text/css" rel="stylesheet" href="/Assets/FAQStyle/reset.css" />
<link type="text/css" rel="stylesheet" href="/Assets/FAQStyle/faq.css" />
<script src="/Assets/FAQStyle/modernizr.js" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        var url = window.location.pathname;
        var substr = url.split('/');
        var urlaspx = substr[substr.length - 1];
        if (urlaspx != "") {
            $('.nav').find('.active').removeClass('active');
            $('.nav li a').each(function () {
                if (this.href.indexOf(urlaspx) >= 0) {
                    $(this).parent().addClass('active');
                }
            });
        }
    }());
</script>
<main>
    <section class="cd-faq faqHGT">
        <ul class="cd-faq-categories">
            @if (ViewBag.Heading1 != null)
            {
                <li>
                    <a style="font-size: 14px" class="selected" href="#basics">@ViewBag.Heading1</a>
                </li>
            }
            @if (ViewBag.Heading2 != null)
            {
                <li>
                    <a style="font-size: 14px" href="#topqueries">@ViewBag.Heading2</a>
                </li>
            }
            @if (ViewBag.Heading3 != null)
            {
                <li>
                    <a style="font-size: 14px" href="#account">@ViewBag.Heading3</a>
                </li>
            }

            @if (ViewBag.Heading4 != null)
            {
                <li>
                    <a style="font-size: 14px" href="#payments">@ViewBag.Heading4</a>
                </li>
            }
        </ul>
        <!-- cd-faq-categories -->

        <div class="cd-faq-items">
            <div>
                @if (ViewBag.Heading1 != null)
                {
                    <ul id="basics" class="cd-faq-group">
                        <li class=" cd-faq-title">
                            <h2 style="font-size: 14px">@ViewBag.Heading1</h2>
                        </li>
                        @foreach (var item in Model.GetFAQLists)
                        {
                            if (item.FaqCategoryId == "924d1fa5-19ee-43e8-975a-1462bd635b83")
                            {
                                <li>
                                    <a class="cd-faq-trigger" style="font-size: x-large;" href="#0">@item.Question</a>
                                    <div class="cd-faq-content">
                                        <p>@item.Answer</p>
                                    </div>
                                </li>
                            }
                        }
                    </ul>
                }
            </div>
            <!-- cd-faq-group -->
            @if (ViewBag.Heading2 != null)
            {
                <ul id="topqueries" class="cd-faq-group">
                    <li class="cd-faq-title">
                        <h2 style="font-size: 14px !important;">@ViewBag.Heading2</h2>
                    </li>
                    @foreach (var item in Model.GetFAQLists)
                    {
                        if (item.FaqCategoryId == "2b4a0848-de19-4281-891e-f4e4699ebb4b")
                        {
                            <li>
                                <a class="cd-faq-trigger" style="font-size: x-large;" href="#0">@item.Question</a>
                                <div class="cd-faq-content">
                                    <p>@item.Answer</p>
                                </div>
                            </li>
                        }
                    }

                </ul>
            }
            <!-- cd-faq-group -->
            @if (ViewBag.Heading3 != null)
            {
                <ul id="account" class="cd-faq-group">
                    <li class="cd-faq-title">
                        <h2 style="font-size: 14px">@ViewBag.Heading3</h2>
                    </li>
                    @foreach (var item in Model.GetFAQLists)
                    {
                        if (item.FaqCategoryId == "653471e0-2d17-4fd9-a6c1-24ea4b8e7850")
                        {
                            <li>
                                <a class="cd-faq-trigger" style="font-size: x-large;" href="#0">@item.Question</a>
                                <div class="cd-faq-content">
                                    <p>@item.Answer</p>
                                </div>
                            </li>
                        }
                    }
                </ul>
            }
            <!-- cd-faq-group -->
            @if (ViewBag.Heading4 != null)
            {
                <ul id="payments" class="cd-faq-group">
                    <li class="cd-faq-title">
                        <h2 style="font-size: 14px !important;">@ViewBag.Heading4</h2>
                    </li>
                    @foreach (var item in Model.GetFAQLists)
                    {
                        if (item.FaqCategoryId == "924d1fa5-19ee-43e8-975a-1462bd635b83")
                        {

                            <li>
                                <a class="cd-faq-trigger" style="font-size: x-large;" href="#0">@item.Question</a>
                                <div class="cd-faq-content">
                                    <p>@item.Answer</p>
                                </div>
                            </li>

                        }
                    }
                </ul>
            }
            <!-- cd-faq-group -->
        </div>
        <!-- cd-faq-items -->
        <a href="#0" class="cd-close-panel">Close</a>
    </section>
</main>
<script src="/Assets/FrontEndScript/js/jquery-2.2.4.min.js"></script>
<script src="/Assets/FAQStyle/jquery.mobile.custom.min.js"></script>
<script src="/Assets/FAQStyle/main.js"></script>
